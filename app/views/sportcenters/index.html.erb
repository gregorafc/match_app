<h2>Lista ośrodków treningowych</h2>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Ośrodek treningowy</th>
      <th>Boiska</th>
    </tr>
  </thead>
  <tbody>
    <% @sportcenters.each do |sportcenter| %>
      <tr>
          <td><%= sportcenter.name %>
              <%= link_to 'Szczegóły', sportcenter, class: "btn btn-info btn-xs" %>
              <%= link_to 'Dodaj boisko treningowe', new_sportcenter_field_path(sportcenter),
                  class: "btn btn-success btn-xs" %>
          </td>
          <td>
            <ul>
              <% sportcenter.fields.each do |field| %>
                <li><%= field.name %>
                    <%= link_to 'Szczegóły',
                        sportcenter_field_path(id: field.id, sportcenter_id: sportcenter.id),
                        class: "btn btn-info btn-xs" %>
                </li>
              <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
      
</table>

<%= link_to 'Dodaj nowy ośrodek treningowy', new_sportcenter_path %>

